
<div class="mt-5 mb-5">
<%= link_to "<button class='btn btn-success'>Cadastrar Usuario</button>".html_safe, new_dashboard_user_path %>
<%= link_to "<button class='btn btn-success'>Cadastrar Carro</button>".html_safe, new_dashboard_car_path %>
</div>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Ação</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.id %></th>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td class="text-center"><%= link_to "Editar", edit_dashboard_user_path(user), class: "btn btn-secondary" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>  


